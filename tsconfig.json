// tsconfig.json
{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "es2015"],
      "jsx": "react",
      "module": "esnext",
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "*": ["*", "src/*"]
      },
      // Add other options as needed
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  }
  